<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.2.0 http://maven.apache.org/xsd/settings-1.2.0.xsd">

    <servers>
        <server>
            <id>artifactory-release</id>
            <username>${env.ARTIFACTORY_USERNAME}</username>
            <password>${env.ARTIFACTORY_PASSWORD}</password>
        </server>
        <server>
            <id>artifactory-snapshot</id>
            <username>${env.ARTIFACTORY_USERNAME}</username>
            <password>${env.ARTIFACTORY_PASSWORD}</password>
        </server>
        <server>
            <id>dracoon-artifactory-release</id>
            <username>${env.ARTIFACTORY_USERNAME}</username>
            <password>${env.ARTIFACTORY_PASSWORD}</password>
        </server>
        <server>
            <id>dracoon-artifactory-snapshot</id>
            <username>${env.ARTIFACTORY_USERNAME}</username>
            <password>${env.ARTIFACTORY_PASSWORD}</password>
        </server>
        <server>
            <id>ossrh</id>
            <username>${env.SONATYPE_OSSRH_REPO_USERNAME}</username>
            <password>${env.SONATYPE_OSSRH_REPO_TOKEN}</password>
        </server>
    </servers>

    <profiles>
        <profile>
            <id>dracoon-artifactory</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <artifactory.domain>${env.ARTIFACTORY_DOMAIN}</artifactory.domain>
            </properties>
            <repositories>
                <repository>
                    <id>artifactory-release</id>
                    <name>libs-release</name>
                    <url>https://${env.ARTIFACTORY_DOMAIN}/artifactory/libs-release</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>artifactory-snapshot</id>
                    <name>libs-snapshot</name>
                    <url>https://${env.ARTIFACTORY_DOMAIN}/artifactory/libs-snapshot</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>artifactory-release</id>
                    <name>plugins-release</name>
                    <url>https://${env.ARTIFACTORY_DOMAIN}/artifactory/plugins-release</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
                <pluginRepository>
                    <id>artifactory-snapshot</id>
                    <name>plugins-snapshot</name>
                    <url>https://${env.ARTIFACTORY_DOMAIN}/artifactory/plugins-snapshot</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                </pluginRepository>
            </pluginRepositories>
        </profile>
        <profile>
            <id>dracoon-dependency-check</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <dependencyCheck.nistNvdApiKey>${env.DEPENDENCY_CHECK_NIST_NVD_API_KEY}</dependencyCheck.nistNvdApiKey>
            </properties>
        </profile>
        <profile>
            <id>dracoon-sonar</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <sonar.domain>${env.SONAR_DOMAIN}</sonar.domain>
                <sonar.token>${env.SONAR_TOKEN}</sonar.token>
            </properties>
        </profile>
    </profiles>

</settings>
